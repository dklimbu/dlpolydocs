@article{aprBegusic2022,
  title = {Equilibrium--Nonequilibrium Ring-Polymer Molecular Dynamics for Nonlinear Spectroscopy},
  author = {Begu\v si\'c, Tomislav and Tao, Xuecheng and Blake, Geoffrey A. and Miller, III, Thomas F.},
  date = {2022-04-07},
  journal = {The Journal of Chemical Physics},
  volume = {156},
